// ============================================
// Shop & Inventory
// ============================================

model ShopProduct {
  id              String         @id @default(uuid())
  stationId       String
  station         Station        @relation(fields: [stationId], references: [id])
  name            String
  category        String?        // OIL, DRINK, WATER, etc.
  unit            String         @default("piece")
  sellingPrice    Float
  reorderLevel    Float          @default(5)
  isActive        Boolean        @default(true)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  batches         ShopPurchaseBatch[]
  sales           ShopSale[]
  wastage         ShopWastage[]
  shiftItems      ShopShiftItem[]

  @@index([stationId])
}

model ShopPurchaseBatch {
  id              String         @id @default(uuid())
  productId       String
  product         ShopProduct    @relation(fields: [productId], references: [id])
  costPrice       Float
  originalQuantity Float
  currentQuantity  Float
  expiryDate      DateTime?
  purchaseDate    DateTime       @default(now())
  supplierId      String?
  recordedBy      String
  createdAt       DateTime       @default(now())

  sales           ShopSale[]

  @@index([productId])
}

model ShopAssignment {
  id              String         @id @default(uuid())
  shiftId         String         @unique
  shift           Shift          @relation(fields: [shiftId], references: [id])
  pumperId        String
  pumperName      String
  status          String         @default("OPEN") // OPEN, CLOSED
  totalRevenue    Float          @default(0)
  totalShortage   Float          @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  items           ShopShiftItem[]
  sales           ShopSale[]
}

model ShopShiftItem {
  id              String         @id @default(uuid())
  assignmentId    String
  assignment      ShopAssignment @relation(fields: [assignmentId], references: [id])
  productId       String
  product         ShopProduct    @relation(fields: [productId], references: [id])
  openingStock    Float
  addedStock      Float          @default(0) // Replenishments during shift
  closingStock    Float?
  soldQuantity    Float          @default(0)
  revenue         Float          @default(0)

  @@index([assignmentId])
  @@index([productId])
}

model ShopSale {
  id              String         @id @default(uuid())
  assignmentId    String
  assignment      ShopAssignment @relation(fields: [assignmentId], references: [id])
  productId       String
  product         ShopProduct    @relation(fields: [productId], references: [id])
  batchId         String?
  batch           ShopPurchaseBatch? @relation(fields: [batchId], references: [id])
  quantity        Float
  unitPrice       Float
  totalAmount     Float
  costPrice       Float          // At time of sale (for FIFO profit)
  timestamp       DateTime       @default(now())

  @@index([assignmentId])
  @@index([productId])
}

model ShopWastage {
  id              String         @id @default(uuid())
  productId       String
  product         ShopProduct    @relation(fields: [productId], references: [id])
  quantity        Float
  reason          String
  costPrice       Float          // Loss value at cost
  recordedBy      String
  timestamp       DateTime       @default(now())

  @@index([productId])
}
